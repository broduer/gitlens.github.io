{
    "version": "2.0.0",
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "es5", "dom", "dom.iterable", "es2015.iterable" ],
        "module": "es2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/*.d.ts"
    ]
}