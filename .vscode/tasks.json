{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
    },
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": ["$node-sass", "$tsc", "$tslint5"]
        },
        {
            "type": "npm",
            "script": "build-dev",
            "group": "build",
            "problemMatcher": ["$node-sass", "$tsc", "$tslint5"]
        },
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$ts-webpack",
                    "fileLocation": "absolute",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "wd[ms].: (Project is running at|Compiling...)"
                        },
                        "endsPattern": {
                            "regexp": "wdm.: (Compiled successfully|Failed to compile)."
                        }
                    }
                },
                {
                    "base": "$tslint-webpack",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "wd[ms].: (Project is running at|Compiling...)"
                        },
                        "endsPattern": {
                            "regexp": "wdm.: (Compiled successfully|Failed to compile)."
                        }
                    }
                }
            ]
        }
    ]
}
