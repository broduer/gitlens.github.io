{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
    },
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": ["$node-sass", "$ts-webpack"]
        },
        {
            "type": "npm",
            "script": "bundle",
            "group": "build",
            "problemMatcher": ["$node-sass", "$ts-webpack"]
        },
        {
            "type": "npm",
            "script": "lint",
            "group": "build",
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": ["$ts-webpack-watch"]
        }
    ]
}
